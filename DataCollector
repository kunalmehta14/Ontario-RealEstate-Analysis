pipeline {
    agent any
    environment {
        DATA_COLLECTOR_IP = credentials('data_collector_ip')
    }
    stage('Start Data Collector Service'){
            steps {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    sshagent(['data_collector_ssh']) {
                        sh 'ssh -o StrictHostKeyChecking=no -l jenkins $DATA_COLLECTOR_IP "docker exec -i scraperapp python3 /opt/app/spiders/main.py"'
                    }
                }
            }
        }
}